{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}


    <!--     Fonts and icons     -->
    <link href="{{ asset('https://fonts.googleapis.com/css?family=Montserrat:400,700,200') }}" rel="stylesheet" />
    <link href="{{ asset('https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css') }}" rel="stylesheet">
    <!-- CSS Files -->
    <link href="{{ asset('back/assets/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('back/assets/css/paper-dashboard.css?v=2.0.1') }}" rel="stylesheet" />
{% endblock %}


{% block body %}
    <div style="background-color: #fff5e8;padding-top:8%;padding-left:8%;padding-right:8%;display: flex;flex-direction: column;border-radius: 30px;box-shadow: 0 0 2em hsl(231deg 62% 94%);">
        <div style ="user-select: none;overflow-y: hidden;display: flex;justify-content: center;align-items: center;background-color: #fff5e8;height: 100vh;">
            <bodyDiv style="height:100%;width:100%;font-family: Acme, serif;min-width:700px;display: flex;justify-content: center;">
                <div style="height:100%;width:100%; display: flex;justify-content: center;">
                    <div class="col-md-6" style="align-items:center;">
                        <div class="card card-user" style="background-color: #fff5e2;align-items:center;">
                            <div class="card-header" >
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Reset your password</h1>

    {{ form_start(requestForm) }}
                                {{ form_label((requestForm.emailuser),"Your email")}}
        {{ form_widget(requestForm.emailuser) }}
        <div>
            <small>
                Enter your email address and we will send you a
                link to reset your password.
            </small>
        </div>

        <button class="btn btn-outline-danger">Send password reset email</button>
    {{ form_end(requestForm) }}
                            </div>
                        </div>
                    </div>
            </div>
        </bodyDiv>
</div>
</div>
{% endblock %}