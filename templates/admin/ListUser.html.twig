{% extends 'back.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.iduser }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.nameuser }}</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>{{ user.lastnameuser }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.emailuser }}</td>
        </tr>
        <tr>
            <th>Profile Picture</th>
            <td>{{ user.profilepicuser }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ user.userrole }}</td>
        </tr>
        <tr>
            <th>Status/th>
            <td>{{ user.userstatus ? 'Activated' : 'Blocked' }}</td>
        </tr>
        <tr>
            <th>Agreed Terms At</th>
            <td>{{ user.agreedTermsAt ? user.agreedTermsAt|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>


    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
