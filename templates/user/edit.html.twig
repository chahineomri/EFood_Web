{% block body %}
    <div style="background-color: #fff5e8;padding-top:8%;padding-left:8%;padding-right:8%;display: flex;flex-direction: column;border-radius: 30px;box-shadow: 0 0 2em hsl(231deg 62% 94%);">
        <div style ="user-select: none;overflow-y: hidden;display: flex;justify-content: center;align-items: center;background-color: #fff5e8;height: 100vh;">
            <bodyDiv style="height:100%;width:100%;font-family: Acme, serif;min-width:700px;">
                <div style="height:100%;width:100%;display:inline-block">
                    <div class="splitdiv" id="leftdiv" style="height: 100%;width: 50%;top:0;overflow-x: hidden; float:left;">
                        <div id="leftdivcard" style="margin:0 auto;width:100%;">
                            <div style=" background-color: #fff5e8;">
                                <div style="align-items: center;">
                                    <h1 style="padding-bottom:5%;text-align:center;color:#051922;">Update your account</h1>
    {% if form is defined %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                                        <img id="imageResult" src="#" alt="Preview Profile Picture" class="img-fluid rounded shadow-sm mx-auto d-block" style="width:20vh;height:20vh;align-items:center;" >
                                        <div style="padding-top:12px;">  </div>
                                    <tr>
    {{ form_row(form.profilepicuser ,
        { 'attr':
            {
                'placeholder': '...',
                'accept':'file',
                'onchange':'readURL(this);',
            }
        }) }}
                                    </tr>



                                    <tr>
        <td>{{ form_label(form.nameuser,"Name")}}</td>
        <td>{{ form_errors(form.nameuser) }}</td>
        <td>{{ form_widget(form.nameuser)}} </td>
                                    </tr>

                                    <tr>

        <td> {{ form_label(form.lastnameuser,"Last Name")}} </td>
        <td>  {{ form_errors(form.lastnameuser) }} </td>
        <td> {{ form_widget(form.lastnameuser)}}   </td>
                                    </tr>



        <tr>
            <td>{{ form_label(form.oldPassword,"Current Password")}}</td>
            <td>{{ form_errors(form.oldPassword) }}</td>
            <td>{{ form_widget(form.oldPassword)}} </td>
        </tr>
                                        <div class="mt-3 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
                                        {{ form_end(form) }}



    {% endif %}
    </div>
    </div>
    </div>
    </div>
    </div>
    </bodyDiv>
    </div>
    </div>
{% endblock %}