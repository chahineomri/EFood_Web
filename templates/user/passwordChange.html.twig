{% endblock %}

{% block body %}
    <div style="background-color: #fff5e8;padding-top:8%;padding-left:8%;padding-right:8%;display: flex;flex-direction: column;border-radius: 30px;box-shadow: 0 0 2em hsl(231deg 62% 94%);">
        <div style ="user-select: none;overflow-y: hidden;display: flex;justify-content: center;align-items: center;background-color: #fff5e8;height: 100vh;">
            <bodyDiv style="height:100%;width:100%;font-family: Acme, serif;min-width:700px;display: flex;justify-content: center;">
                <div style="height:100%;width:100%; display: flex;justify-content: center;">
                    <div class="col-md-6" >
                        <div class="card card-user" style="align-items:center;">
                            <div class="card-header" >
                                <h1 style="padding-bottom:5%;text-align:center;color:#051922;">Change your password</h1>

                                {% if form is defined %}
                                   {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                                    <tr>
                                        <td>{{ form_widget(form.plainPassword)}} </td>
                                    </tr>
                                    <tr>
                                        <label class="col-form-label col-sm-3 required" for="user_type_update_oldPassword">Current Password *</label>
                                        <td>{{ form_widget(form.oldPassword)}} </td>
                                    </tr>
                                    <div class="mt-3 text-center"><button class="btn btn-outline-danger" type="submit" >Save Change</button></div>
                                    {{ form_end(form) }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
        </bodyDiv>
    </div>
</div>
{% endblock %}